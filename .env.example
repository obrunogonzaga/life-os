# Life OS - Configurações de Ambiente

# Database Mode Selection
# Options: local | remote
DATABASE_MODE=local

# MongoDB Configuration - Local Development
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=lifeos
MONGODB_USERNAME=lifeos_app
MONGODB_PASSWORD=lifeos_app_password

# Admin credentials (for MongoDB root access - local only)
MONGODB_ADMIN_USERNAME=lifeos
MONGODB_ADMIN_PASSWORD=lifeos123

# MongoDB Configuration - Remote (Coolify/Hostinger)
REMOTE_MONGODB_HOST=your-coolify-domain.com
REMOTE_MONGODB_PORT=27017
REMOTE_MONGODB_DATABASE=lifeos
REMOTE_MONGODB_USERNAME=lifeos_user
REMOTE_MONGODB_PASSWORD=your-remote-password
# Optional: If using MongoDB Atlas or other cloud providers with SRV records
REMOTE_MONGODB_URI=mongodb://lifeos_user:your-remote-password@your-coolify-domain.com:27017/lifeos?authSource=lifeos

# Application Settings
NEWS_UPDATE_INTERVAL_HOURS=6
MAX_ARTICLES_PER_SOURCE=50

# Development Settings
DEBUG=false
LOG_LEVEL=INFO